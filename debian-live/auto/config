#!/bin/sh
#
# Edit this file carefully!
#
#
# MIRROR_DEBIAN=http://ftp.it.debian.org/debian
# MIRROR_SECURITY=http://security.debian.org/
#    --hostname "ArcheOS" \
#    --debian-installer live \
#    --syslinux-splash "config/binary_syslinux/splash.rle" \
#    --syslinux-timeout 20 \
#    --backports true \
#    --mirror-binary-backports "http://backports.debian.org/debian-backports" \
#    --mirror-chroot-backports "http://localhost:3142/backports.debian.org/debian-backports" \

lb config noauto \
    --apt-ftp-proxy 'http://localhost:3142/' \
    --apt-http-proxy 'http://localhost:3142/' \
    --clean \
    -b iso \
    --architecture i386 \
    --apt-recommends false \
    --bootappend-live 'acpi_osi="Linux"' \
    --distribution wheezy \
    --archive-areas "main contrib non-free" \
    --memtest none \
    --debian-installer-gui true \
    --mirror-binary "http://ftp.it.debian.org/debian" \
    --mirror-binary-security "http://security.debian.org/" \
    --mirror-bootstrap "http://ftp.it.debian.org/debian" \
    --mirror-chroot  "http://ftp.it.debian.org/debian" \
    --mirror-chroot-security "http://security.debian.org/" \
    --iso-application "ArcheOS" \
    --iso-publisher "ArcheOS Team" \
    --iso-volume "ArcheOS 4 Theodoric" \
    ${@}

